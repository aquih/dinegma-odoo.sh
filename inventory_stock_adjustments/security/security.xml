<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_stock_adjustments" model="ir.module.category">
        <field name="name">Stock Adjustments</field>
        <field name="description">Helps you manage your inventory adjustments</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_stock_adjustments_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_stock_adjustments"/>
    </record>

    <record id="group_stock_adjustments_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_stock_adjustments"/>
        <field name="implied_ids" eval="[(4, ref('group_stock_adjustments_user'))]"/>
    </record>

</odoo>
