<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- View stock.location form -->
  <record id="view_inherit_stock_location" model="ir.ui.view">
    <field name="name">stock.location.view.form.inherit</field>
    <field name="model">stock.location</field>
    <field name="inherit_id" ref="stock.view_location_form"/>
    <field name="arch" type="xml">
      <group name="additional_info" position="after">
        <group string="OneBeat">
          <field name="onebeat_type" invisible="usage != 'internal'"/>
          <field name="onebeat_src_location_id"/>
          <field name="default_replenishment_lead_time"/>
        </group>
      </group>
    </field>
  </record>
</odoo>
