<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="dte_integration_sv.PaymentScreenButtons" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
    <xpath expr="//div[hasclass('payment-buttons')]" position="after">
      <div class="d-flex gap-2">
        <div class="w-100 w-md-50"/>
        <button class="button js_credito_fiscal btn btn-light btn-lg d-flex justify-content-between align-items-baseline w-100 w-md-50 lh-lg" t-att-class="{ 'highlight active': currentOrder.es_credito_fiscal }" t-on-click="toggleCreditoFiscal">
          <span>
            <i class="fa fa-file-text-o me-2" />
            Credito Fiscal
          </span>
          <i class="fa me-2" t-attf-class="{{ currentOrder.es_credito_fiscal ? 'fa-check-square text-action' : 'fa-square-o' }}" />
        </button>
      </div>

    </xpath>
  </t>
</templates>
