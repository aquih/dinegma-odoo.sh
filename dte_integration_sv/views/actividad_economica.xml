<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_actividad_economica_form" model="ir.ui.view">
        <field name="name">actividad.economica.form.view</field>
        <field name="model">actividad.economica</field>
        <field name="arch" type="xml">
            <form string="Actividad Económica">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_actividad_economica_list" model="ir.ui.view">
        <field name="name">actividad.economica.list.view</field>
        <field name="model">actividad.economica</field>
        <field name="arch" type="xml">
            <list string="Actividad Económica">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_actividad_economica" model="ir.actions.act_window">
        <field name="name">Actividades Economicas</field>
        <field name="res_model">actividad.economica</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_dte_integracion" name="DTE Integracion" parent="account.menu_finance_configuration"/>

    <menuitem id="menu_actividad_economica" name="Actividades Economicas" parent="menu_dte_integracion"
              action="action_actividad_economica"/>


</odoo>