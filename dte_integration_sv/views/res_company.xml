<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_res_company_form_inh_dte" model="ir.ui.view">
        <field name="name">res.company.form.view.inh.dte</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="dte_integration" string="DTE Integration">
                    <group string="DTE Integration Settings">
                        <field name="username" placeholder="User"/>
                        <field name="key" placeholder="Llave"/>
                        <field name="api_token" placeholder="API Token"/>
                    </group>

                    <group string="Campos Requeridos">
                        <field name="cod_company" placeholder="Codigo Compañía"/>
                        <field name="tipo_documento"/>
                        <field name="nrc" placeholder="NRC"/>
                        <field name="actividad_economica_id"/>
                        <field name="cod_establecimiento"/>
                        <field name="tipo_establecimiento"/>
                        <field name="departamento"/>
                        <field name="municipio_id"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>


</odoo>